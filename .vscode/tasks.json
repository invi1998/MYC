{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "MYC: Build & Run (run.ps1)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/run.ps1"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "MYC: Reconfigure + Build & Run",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/run.ps1",
				"-Reconfigure"
			],
			"problemMatcher": []
		},
		{
			"label": "MYC: Build Only",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/run.ps1",
				"-NoRun"
			],
			"problemMatcher": []
		}
	]
}